<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar" parent="@android:style/Theme.Holo.Light">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="spacer">
        <item name="android:layout_marginTop">@dimen/activity_spacer</item>
    </style>

    <style name="nav">
        <item name="android:layout_marginTop">@dimen/activity_spacer</item>
        <item name="android:background">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="nav_no_spacer">
        <item name="android:background">@color/green</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="orange_background">
        <item name="android:background">@color/orange</item>
    </style>

    <style name="splashLabel">
        <item name="android:textSize">@dimen/text_size_xlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="labelHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="labelHeaderMedium">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="labelHeaderMediumGreen" parent="labelHeaderMedium">
        <item name="android:textColor">@color/green</item>
    </style>

    <style name="RadioButton">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ListItemSubTitle">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/text_subtitle</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="ListItemDistance">
        <item name="android:textSize">12sp</item>
    </style>

</resources>
